<%- include( 'layouts/head' ) %>

<body style="background-color:#f9f9f9 ;">
  <%- include( 'layouts/navbar' ) %>
  <main class="mt-5 container-fluid">

    <div class="container px-1" style="margin-top: 200px;">
      <div class="row gx-4">
        <div class="col"></div>
        
        <div class="col">
         <div class="p-3 border bg-light cuenta">
           <h3>Cuenta</h3>
           <hr>
           <% users.forEach((u) =>{ %>
            <h5><%= u.name %></h5>
            <h5><%= u.username %></h5>
            <img src="<%= u.avatar %>" alt="<%= u.name %>" class="img-fluid" height="100px" width="100px">
           <% }) %>

         </div>
        </div>
        <div class="col">
          <div class="p-3 border bg-light cuenta">
            <h3>Datos Personales</h3>
            <hr>
            <% users.forEach((u) =>{ %>
              <h5>Domicilio<%= u.adress %></h5>
              <h5>Edad <%= u.age %></h5>
              <h5>Tel <%= u.phone %></h5>
             <% }) %>
          </div>
        </div>
        <div class="col"></div>
      </div>
    </div>

    
    <div class="row mt-3" >
      <div class="col-xxl-4"></div>
      <div class="col-xxl-4 box-logout d-flex justify-content-center align-items-center" ><a href="/api/logout" class=""><h1>Logout</h1></a></div>
      <div class="col-xxl-4"></div>
    </div>
    <div class="row mt-3" >
      <div class="col-xxl-4"></div>
      <div class="col-xxl-4 box-logout d-flex justify-content-center align-items-center" style="background-color: #EFEFEF"><a href="/msg"><h1 style="color: black;">Comentarios!</h1></a></div>
      <div class="col-xxl-4"></div>
    </div>

  </main>
  <%- include( 'layouts/footer' ) %>
</body>

</html>