<%- include( 'layouts/head' ) %>
<body>
    <%- include( 'layouts/navbar' ) %>
    <main class="container-fluid">
        <div class="mb-5"></div>

        <div class="row d-flex">
            <div class="col-xxl-2"></div>
            <div class="col-xxl-5">
                <% shoes.forEach((p) =>{ %>
                      

                    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                          <div class="carousel-item active">
                            <img src="<%= p.img %>" class="d-block w-100" alt="...">
                          </div>
                          <div class="carousel-item">
                            <img src="<%= p.img2 %>" class="d-block w-100" alt="...">
                          </div>
                          <div class="carousel-item">
                            <img src="<%= p.img3 %>" class="d-block w-100" alt="...">
                          </div>
                          <div class="carousel-item">
                            <img src="<%= p.img4 %>" class="d-block w-100" alt="...">
                          </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="visually-hidden">Next</span>
                        </button>
                      </div>
                      

                <% }) %>
                

            </div>
            <div class="col-xxl-5">
                <% shoes.forEach((p) =>{ %>
                    <h5 class="mb-3 mt-6 shoes-title-vista" style="margin-top: 100px;"><%= p.title %></h5>
                    <h2 class="shoes-desc-vista"><%= p.desc %></h2>
                <% }) %>
                





                

            </div>
            <div class="col-xxl-2"></div>
        </div>

    </main>
    <%- include( 'layouts/footer' ) %>
</body>